@namespace PayMeNextApp.Shared

<div class="@CardClass">
    @if (Title != null || HeaderActions != null)
    {
        <div class="card-header px-6 py-4 border-b border-gray-700 flex justify-between items-center">
            @if (Title != null)
            {
                <h3 class="text-xl font-semibold">@Title</h3>
            }
            @if (HeaderActions != null)
            {
                <div>@HeaderActions</div>
            }
        </div>
    }
    
    <div class="card-content">
        @ChildContent
    </div>
    
    @if (FooterActions != null)
    {
        <div class="card-footer px-6 py-4 border-t border-gray-700">
            @FooterActions
        </div>
    }
</div>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public bool Interactive { get; set; } = false;
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public RenderFragment? HeaderActions { get; set; }
    [Parameter] public RenderFragment? FooterActions { get; set; }
    [Parameter] public string Class { get; set; } = "";

    private string CardClass
    {
        get
        {
            var baseClasses = "bg-gray-800 rounded-lg shadow-lg overflow-hidden transition-all duration-300";
            var interactiveClasses = Interactive ? "hover:shadow-xl hover:transform hover:-translate-y-1 cursor-pointer" : "";
            return $"{baseClasses} {interactiveClasses} {Class}";
        }
    }
}
